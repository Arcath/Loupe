<style type="text/css">
.oddrunning{
	background-color:#bbffb6;
}

.evenrunning{
	background-color:#bbffc7;
}

.oddoffline{
	background-color:#fdd;
}

.evenoffline{
	background-color:#fbb;
}
</style>

<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "All Services", services_path  %></li>
      <li><%= link_to "Offline Services", "#" %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Services</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">Service</th>
                    <th>
            Status
          </th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @services.each do |service| -%>
        <tr class="<%= cycle("odd", "even") %><%= service.status %>">
          <td>
            <%= service.name %>
          </td>
                    <td>
            <%= service.status %>
          </td>
          <td class="last">

          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
